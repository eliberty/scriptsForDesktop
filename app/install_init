#!/usr/bin/env bash

sudo apt-get install -y build-essential libpq-dev
sudo apt-get install -y -q jq curl openssh-server

useradd elibadmin --uid 1010 --create-home
sudo adduser elibadmin sudo
sudo passwd elibadmin
touch /home/elibadmin/.ssh/authorized_keys
path_authorized_keys=/home/elibadmin/.ssh/authorized_keys

keyssh="ssh-rsa  richard@rbeliberty"
echo $keyssh >> $path_authorized_keys

