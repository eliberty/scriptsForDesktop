#!/usr/bin/env bash

user=eliberty
path_authorized_keys=/home/${user}/.ssh/authorized_keys
keyssh="ssh-rsa  richard@rbeliberty"

sudo apt-get install -y build-essential libpq-dev
sudo apt-get install -y -q jq curl openssh-server

useradd ${user} --uid 1010 --create-home
sudo adduser ${user} sudo
#sudo passwd ${user}
mkdir -p /home/${user}/.ssh/
touch /home/${user}/.ssh/authorized_keys
echo $keyssh >> $path_authorized_keys
chown -R ${user}:${user} /home/eliberty
# shellcheck disable=SC2024
sudo echo '${user} ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers